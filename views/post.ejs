        required
        value="<%=data.dob%>"
      />
    </div>

    <div class="col-12">
      <label for="inputAddress" class="form-label">Jamat</label>
      <input
        name="jamat"
        type="text"
        class="form-control"
        id="inputAddress"
        placeholder="Brahmanbaria"
        required
        value="<%=data.jamat%>"
      />
    </div>

    <div class="col-12">
      <label for="inputAddress" class="form-label">Halka</label>
      <input
        name="halka"
        type="text"
        class="form-control"
        id="inputAddress"
        placeholder="Shimrail Kandi"
        required
        value="<%=data.halka%>"
      />
    </div>

    <div class="col-md-6">
      <label for="inputAddress2" class="form-label">Work</label>
      <input
        name="work"
        type="text"
        class="form-control"
        id="inputAddress2"
        placeholder="Remote job"
        required
        value="<%=data.work%>"
      />
    </div>

    <div class="col-md-6">
      <label for="inputAddress2" class="form-label">Class</label>
      <input
        type="number"
        class="form-control"
        id="inputAddress2"
        placeholder="11"
        name="study"
        required
      />
    </div>

    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Any Post in Jamat?</label>
      <input
        type="text"
        class="form-control"
        name="jpost"
        id="inputEmail4"
        required
        value="<%=data.jpost%>"
      />
    </div>

    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Comment</label>
      <input
        value="<%=data.comment%>"
        type="text"
        class="form-control"
        name="comment"
        id="inputEmail4"
      />
    </div>

    <div class="col-md-4">
      <div class="form-check">
        <input
          class="form-check-input"
          name="quran"
          value="true"
          type="checkbox"
          id="gridCheck"
        />
        <label class="form-check-label" for="gridCheck">
          Read Quran regularly?
        </label>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-check">
        <input
          class="form-check-input"
          name="syllabus"
          value="true"
          type="checkbox"
          id="gridCheck"
        />
        <label class="form-check-label" for="gridCheck">
          Finished your Waqfenau Syllabus?
        </label>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-check">
        <input
          class="form-check-input"
          name="joccations"
          value="true"
          type="checkbox"
          id="gridCheck"
        />
        <label class="form-check-label" for="gridCheck">
          Attend Jamat Occation Regularly?
        </label>
      </div>
    </div>

    <div class="col-12">
      <div class="form-check">
        <input
          class="form-check-input"
          name="letter"
          value="true"
          type="checkbox"
          id="gridCheck"
        />
        <label class="form-check-label" for="gridCheck">
          Letter to huzur regularly?
        </label>
      </div>
    </div>

    <div class="col-12">
      <button type="submit" class="btn btn-primary">POST</button>
    </div>
  </form>
</div>

