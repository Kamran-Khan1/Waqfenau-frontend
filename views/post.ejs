<div class="container mt-5">
  <form
    class="row g-3 bg-success-subtle rounded p-4"
    action="/post/update/<%= data.id %>"
    method="post"
  >
    <div class="col-md-6">
      <label for="inputEmail4" class="form-label">Waq-fe-nau NO</label>
      <input
        type="text"
        class="form-control"
        name="wfnumber"
        id="inputEmail4"
        value="<%=data.wfnumber%>"
        required
      />
    </div>

    <div class="col-md-6">
      <label for="inputPassword4" class="form-label">name</label>
